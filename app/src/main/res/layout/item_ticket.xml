<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblMaVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mã vé: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblNgayDi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMaVe"
            android:layout_marginLeft="10dp"
            android:text="Ngày đi: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMaVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblMaVe"
            android:text="DSVN12345678" />

        <TextView
            android:id="@+id/txtNgayDi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMaVe"
            android:layout_toRightOf="@+id/lblNgayDi2"
            android:text="29/02/2017 18:55:00" />

        <TableLayout
            android:id="@+id/tblGaDiDaDen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lblNgayDi2"
            android:columnCount="2"
            android:rowCount="2">

            <TableRow android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/lblGaDi2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ga đi"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblGaDen2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ga đến"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txtGaDi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Hà Nội"
                    android:textColor="#0000FF" />

                <TextView
                    android:id="@+id/txtGaDen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TP.HCM"
                    android:textColor="#FF0000" />
            </TableRow>

        </TableLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tblGaDiDaDen"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/black" />
    </RelativeLayout>

</LinearLayout>